                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6 9L12 15L18 9" stroke="currentColor" stroke-width="2"
                                          stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </button>
                            <div class="dropdown-menu">
                                <a href="#" class="dropdown-item">Смотрю</a>
                                <a href="#" class="dropdown-item">Просмотрено</a>
                                <a href="#" class="dropdown-item">Буду смотреть</a>
                                <a href="#" class="dropdown-item">Отложено</a>
                                <a href="#" class="dropdown-item">Брошено</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="anime-meta">
                    <div class="meta-item rating">
                        <div class="rating-value">@Model.StatsScores</div>
                        <div class="rating-stars">
                            <div class="stars-container">
                                <div class="stars-filled" style="width: 98%"></div>
                            </div>
                            <span class="rating-count">2.4K оценок</span>
                        </div>
                    </div>
                    <div class="meta-item">
                        <div class="meta-label">Тип</div>
